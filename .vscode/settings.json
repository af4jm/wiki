{
    "chat.agent.enabled": false,
    "chat.commandCenter.enabled": false,
    "chat.detectParticipant.enabled": false,
    "chat.extensionTools.enabled": false,
    "cSpell.customDictionaries": {
        "project-words": {
            "name": "project-words",
            "path": "./.vscode/spellright.dict",
            "description": "Words used in this project",
            "addWords": true
        },
        "custom": true
    },
    "diffEditor.renderSideBySide": true,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.detectIndentation": false,
    "editor.fontFamily": "'Noto Sans Mono', Consolas, 'Courier New', monospace",
    "editor.fontVariations": "tabular-nums slashed-zero historical-forms no-common-ligatures no-discretionary-ligatures no-historical-ligatures",
    "editor.glyphMargin": false,
    "editor.insertSpaces": true,
    "editor.largeFileOptimizations": true,
    "editor.snippetSuggestions": "bottom",
    "editor.suggestSelection": "recentlyUsedByPrefix",
    "editor.tabCompletion": "onlySnippets",
    "editor.unicodeHighlight.invisibleCharacters": true,
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "indent",
    "explorer.copyRelativePathSeparator": "/",
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": true,
    "explorer.fileNesting.patterns": {
        "*": "${basename}.*"
    },
    "files.associations": {
        ".spellignore": "gitignore",
        "*.xht": "xml",
        "*.snippet": "snippet",
        "*.xhtml": "xml"
    },
    "files.encoding": "utf8",
    "files.eol": "\r\n",
    "files.trimTrailingWhitespace": true,
    "markdown.preferredMdPathExtensionStyle": "includeExtension",
    "markdown.styles": [
        "assets\\css\\style.scss"
    ],
    "markdown.suggest.paths.includeWorkspaceHeaderCompletions": "onSingleOrDoubleHash",
    "markdown.updateLinksOnFileMove.enabled": "always",
    "markdown.validate.enabled": true,
    "markdown.validate.fileLinks.enabled":"error",
    "markdown.validate.fileLinks.markdownFragmentLinks": "error",
    "markdown.validate.fragmentLinks.enabled": "error",
    "markdown.validate.referenceLinks.enabled": "ignore",
    "markdown-mermaid.darkModeTheme": "neutral",
    "markdown-mermaid.lightModeTheme": "neutral",
    "markdownlint.config": {
        "extends": ".markdownlint.json"
    },
    "markdownlint.customRules": [
        "./node_modules/markdownlint-rule-olstart/rule.js"
    ],
    "markdownShortcuts.bold.marker": "**",
    "markdownShortcuts.bullets.marker": "-",
    "markdownShortcuts.italics.marker": "*",
    "markdownShortcuts.icons.bold": false,
    "markdownShortcuts.icons.bullets": false,
    "markdownShortcuts.icons.citations": false,
    "markdownShortcuts.icons.image": false,
    "markdownShortcuts.icons.italic": false,
    "markdownShortcuts.icons.link": false,
    "markdownShortcuts.icons.strikethrough": false,
    "markdownShortcuts.languages": [
        "markdown"
    ],
    "search.exclude": {
        ".vscode/**": false,
        "node_modules/**": true,
        "desktop.ini": true
    },
    "search.useIgnoreFiles": true,
    "spellright.addToSystemDictionary": false,
    "spellright.configurationUpdate": false,
    "spellright.documentTypes": [
        "code",
        "latex",
        "markdown",
        "plain",
        "xml"
    ],
    "spellright.groupDictionaries": true,
    "spellright.ignoreRegExpsByClass": {
        "markdown": [
            "/\\]\\(.*?\\)/gm",
            "/(\\.?)(gif|jpg|md|pdf|png|webp)/gm",
            "/&(amp|gt|lt|nbsp);/gm"
        ],
    },
    "spellright.language": [
        "en",
        "es",
        "el",
        "he"
    ],
    "spellright.notificationClass": "warning",
    "spellright.parserByClass": {
        "markdown": {
            "parser": "markdown"
        }
    },
    "spellright.suggestionsInHints": false,
    "spellright.useDocumentSymbolsInCode": true,
    "terminal.integrated.hideOnStartup": "always",
    "vsicons.associations.folders": [
        {
            "icon": "route",
            "extensions": [
                "route",
                "routes",
                "_route",
                "_routes"
            ],
            "format": "svg",
            "overrides": "route"
        }
    ],
    "window.border": "#509ee5",
    "workbench.editor.autoLockGroups": {
        "mainThreadWebview-markdown.preview": true
    },
    "workbench.editor.customLabels.patterns" : {
        "**/README.md": "${dirname} â€¢ README"
    },
    "workbench.editor.preventPinnedEditorClose": "keyboardAndMouse",
    "[html][markdown]": {
        "editor.fontFamily": "'Noto Sans', 'Droid Sans', Ariel, sans-serif",
        "editor.fontSize": 14,
        "editor.fontVariations": "tabular-nums slashed-zero historical-forms no-common-ligatures no-discretionary-ligatures no-historical-ligatures",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "editor.unicodeHighlight.invisibleCharacters": true,
        "editor.wrappingStrategy": "advanced"
    }
}
